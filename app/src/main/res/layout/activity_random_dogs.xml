<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RandomDogActivity">

    <TextView
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Наши собаки"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"/>




    <ImageView
        android:id="@+id/random_dogs_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:scaleType="center"
        android:text="Поиск"
        app:srcCompat = "@drawable/ic_search"/>

    <ImageView
        android:id="@+id/random_dogs_favorites"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:scaleType="center"
        android:layout_marginEnd="50dp"
        android:text="Избранное"
        app:srcCompat = "@drawable/ic_favorite"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/random_dogs_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"/>

    <ProgressBar
        android:id="@+id/random_dogs_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/random_dog_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ошибка. Попробывать еще разю"
        android:layout_gravity="center"/>

</FrameLayout>